      <?php if(isset($item_count) && $item_count > 0): ?>
        <ul id="cs_cart_widget_list">
          <li id="cs_cart_widget_list_item">
            <div id="cs_cart_widget_summary">
              <a id="cs_cart_widget_link" href='<?php echo $view_cart_url ?>'>
                <span id="cs_cart_widget_item_count"><?php echo $item_count; ?></span>
                <span id="cs_cart_widget_item_count_text"> <?php echo _n('item', 'items', $item_count, 'cloudswipe'); ?></span> 
